{
  "name": "@kibibit/kb-error",
  "version": "0.0.0-development",
  "description": "Basic erorr class for kibibit projects",
  "main": "kb-error.js",
  "types": "kb-error.d.ts",
  "files": [
    "kb-error.js",
    "kb-error.d.ts"
  ],
  "scripts": {
    "generate-types": "tsc",
    "commit": "cz",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "lint:fix": "eslint **/*.js --fix",
    "lint": "eslint **/*.js",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "error",
    "exception",
    "error-handling"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/preset-env": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "all-contributors-cli": "^6.19.0",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.13.0",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-stare": "^2.2.0",
    "semantic-release": "^19.0.3",
    "semantic-release-cli": "^5.4.0",
    "typescript": "^4.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kibibit/kb-error.git"
  },
  "author": "ZimGil (gil.tichon@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kibibit/kb-error/issues"
  },
  "homepage": "https://github.com/Kibibit/kb-error#readme",
  "jest-stare": {
    "resultDir": "test-results/",
    "coverageLink": "../coverage/index.html"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
